#!/usr/bin/env ruby

require File.join(File.dirname(__FILE__), "..", "lib", "nlp")

file      = File.open "./corpora/shakes.txt"

tokenizer = NLP::Tokenizer.new(file)

index     = NLP::NgramIndex.extract(5, tokenizer)

File.open("dump.dat", 'w') {|f| f.write( Marshal.dump(index) ) }

#index    = Marshal.load File.open("dump.dat").read

#p index.freq(%W{ the })